container_commands:
  01_migrate:
    command: |
      echo "Running migrations..."
      source /var/app/venv/*/bin/activate && python3 manage.py migrate --noinput
    leader_only: true

  02_collectstatic:
    command: |
      echo "Running collectstatic..."
      source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput
    leader_only: true
